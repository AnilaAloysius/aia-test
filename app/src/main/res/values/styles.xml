<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColorPrimary">@color/text_color_primary</item>
    </style>

    <style name="error_appearance" parent="@android:style/TextAppearance.Material.Small">
        <item name="android:textColor">@android:color/holo_red_dark</item>
    </style>

    <style name="search_hint_appearance" parent="@android:style/TextAppearance.Material.Medium">
        <item name="android:textColor">@color/colorAccent</item>
    </style>

    <style name="empty_item_appearence" parent="@android:style/TextAppearance.Material.Large">
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="progress_bar" parent="Theme.AppCompat.Light">
        <item name="colorAccent">@color/green</item>
    </style>

    <style name="dateandtime_appearence" parent="@android:style/TextAppearance.Material.Small"></style>

    <style name="SwitchCompatTheme">
        <item name="colorControlActivated">@color/colorPrimaryDark</item>
    </style>

</resources>
